{
  "dxt_version": "0.2",
  "name": "beehiiv-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Beehiiv API integration - manage newsletters, publications, posts, and subscribers",
  "author": {
    "name": "Ousep Achon"
  },
  "server": {
    "type": "python",
    "entry_point": "beehiiv_mcp_server.py",
    "mcp_config": {
      "command": "${__dirname}/venv/bin/python",
      "args": [
        "${__dirname}/beehiiv_mcp_server.py"
      ]
    }
  }
}
